<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:layout_width ="0dp"
        android:layout_height ="match_parent"
        android:layout_weight="1"
        android:name ="com.fernandes.damien.channelmessaging.fragments.ChannelListFragment"
        android:id="@+id/fragmentListChannel_ID"
        tools:layout="@layout/fragment_channellist" />

    <fragment
        android:layout_width ="0dp"
        android:layout_height ="match_parent"
        android:layout_weight="3"
        android:name ="com.fernandes.damien.channelmessaging.fragments.ChannelConvFragment"
        android:id="@+id/fragmentConvChannel_ID"
        tools:layout="@layout/fragment_channelconv" />

</LinearLayout>